{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"general": {
			"type": "object",
			"properties": {
				"description": {
					"type": "string"
				},
				"socials": {
					"type": "object",
					"properties": {
						"github": {
							"type": "string"
						},
						"twitter": {
							"type": "string"
						},
						"instagram": {
							"type": "string"
						},
						"linkedin": {
							"type": "string"
						}
					},
					"required": ["github", "twitter", "instagram", "linkedin"]
				}
			},
			"required": ["description", "socials"]
		},
		"coding": {
			"type": "object",
			"properties": {
				"languages": {
					"type": "array",
					"items": [
						{
							"type": "string"
						},
						{
							"type": "string"
						},
						{
							"type": "string"
						}
					]
				},
				"projects": {
					"type": "array",
					"items": [
						{
							"type": "object",
							"properties": {
								"title": {
									"type": "string"
								},
								"date": {
									"type": "string"
								},
								"link": {
									"type": "string"
								},
								"text": {
									"type": "string"
								},
								"tags": {
									"type": "array",
									"items": [
										{
											"type": "string"
										},
										{
											"type": "string"
										}
									]
								}
							},
							"required": ["title", "date", "link", "text", "tags"]
						}
					]
				}
			},
			"required": ["languages", "projects"]
		},
		"photography": {
			"type": "object",
			"properties": {
				"images": {
					"type": "array",
					"items": [
						{
							"type": "object",
							"properties": {
								"date": {
									"type": "string"
								},
								"filename": {
									"type": "string"
								},
								"film": {
									"type": "string"
								}
							},
							"required": ["date", "filename", "film"]
						}
					]
				}
			},
			"required": ["images"]
		}
	},
	"required": ["general", "coding", "photography"]
}
